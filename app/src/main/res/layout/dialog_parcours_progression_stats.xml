            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Inscrits"
                android:textColor="#666666"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
