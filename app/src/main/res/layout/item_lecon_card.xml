<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardViewLecon"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp"
    android:foreground="?android:attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/cours_header_gradient"
            android:padding="16dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/textViewLeconOrdre"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/module_number_bg"
                android:gravity="center"
                android:text="1"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="12dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textViewLeconTitre"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Titre de la leÃ§on"
                    android:textColor="@android:color/white"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:maxLines="2"
                    android:ellipsize="end" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textViewTypeContenu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ“ Texte"
                        android:textColor="#E0E0E0"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/textViewDuree"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:text="30 min"
                        android:textColor="#E0E0E0"
                        android:textSize="12sp"
                        android:visibility="gone" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <!-- Contenu TEXTE -->
        <LinearLayout
            android:id="@+id/layoutTexte"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:visibility="gone">

            <TextView
                android:id="@+id/textViewContenuTexte"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Contenu de la leÃ§on"
                android:textColor="#666666"
                android:textSize="14sp"
                android:lineSpacingExtra="4dp"
                android:maxLines="10"
                android:ellipsize="end" />
        </LinearLayout>

        <!-- Contenu PDF -->
        <LinearLayout
            android:id="@+id/layoutPdf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:gravity="center"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ“„"
                android:textSize="48sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Document PDF disponible"
                android:textColor="#666666"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- Contenu IMAGE -->
        <FrameLayout
            android:id="@+id/layoutImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone">

            <ImageView
                android:id="@+id/imageViewLecon"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:scaleType="centerCrop"
                android:background="@drawable/cours_placeholder_gradient" />
        </FrameLayout>

        <!-- Contenu VIDEO -->
        <LinearLayout
            android:id="@+id/layoutVideo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:gravity="center"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸŽ¥"
                android:textSize="48sp" />

            <TextView
                android:id="@+id/textViewVideoUrl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="VidÃ©o disponible"
                android:textColor="#666666"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- Bouton de complÃ©tion -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonToggleCompletion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="Marquer comme complÃ©tÃ©e"
            android:textColor="@android:color/white"
            app:backgroundTint="@color/primary_blue"
            app:cornerRadius="8dp"
            android:textAllCaps="false" />
    </LinearLayout>
</androidx.cardview.widget.CardView>
