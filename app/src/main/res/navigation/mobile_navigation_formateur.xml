<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation_formateur"
    app:startDestination="@+id/formateurDashboardFragment">

    <fragment
        android:id="@+id/formateurDashboardFragment"
        android:name="com.example.kawi_niveau_mobile_app.ui.formateur.dashboard.FormateurDashboardFragment"
        android:label="Tableau de bord"
        tools:layout="@layout/fragment_formateur_dashboard" />

    <fragment
        android:id="@+id/nav_formateur_cours"
        android:name="com.example.kawi_niveau_mobile_app.ui.formateur.cours.CoursListFragment"
        android:label="Gestion de cours"
        tools:layout="@layout/fragment_cours_list">
        <action
            android:id="@+id/action_nav_formateur_cours_to_coursFormFragment"
            app:destination="@id/coursFormFragment" />
        <action
            android:id="@+id/action_nav_formateur_cours_to_coursDetailFragment"
            app:destination="@id/coursDetailFragment" />
    </fragment>

    <fragment
        android:id="@+id/coursFormFragment"
        android:name="com.example.kawi_niveau_mobile_app.ui.formateur.cours.CoursFormFragment"
        android:label="Formulaire Cours"
        tools:layout="@layout/fragment_cours_form">
        <argument
            android:name="coursId"
            app:argType="long"
            android:defaultValue="-1L" />
    </fragment>

    <fragment
        android:id="@+id/coursDetailFragment"
        android:name="com.example.kawi_niveau_mobile_app.ui.formateur.cours.CoursDetailFragment"
        android:label="DÃ©tails du Cours"
        tools:layout="@layout/fragment_cours_detail">
        <argument
            android:name="coursId"
            app:argType="long" />
    </fragment>

    <fragment
        android:id="@+id/nav_formateur_profile"
        android:name="com.example.kawi_niveau_mobile_app.ui.home.profil.ProfileFragment"
        android:label="Profil"
        tools:layout="@layout/fragment_profile" />

</navigation>
