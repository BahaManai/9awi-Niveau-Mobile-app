<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_cours_graph"
    app:startDestination="@id/coursListFragment">

    <fragment
        android:id="@+id/coursListFragment"
        android:name="com.example.kawi_niveau_mobile_app.ui.cours.CoursListFragment"
        android:label="Mes Cours"
        tools:layout="@layout/fragment_cours_list">
        
        <action
            android:id="@+id/action_coursList_to_coursDetail"
            app:destination="@id/coursDetailFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
    </fragment>

    <fragment
        android:id="@+id/coursDetailFragment"
        android:name="com.example.kawi_niveau_mobile_app.ui.cours.CoursDetailFragment"
        android:label="Détail du Cours"
        tools:layout="@layout/fragment_cours_detail">
        
        <argument
            android:name="coursId"
            app:argType="long" />
        
        <action
            android:id="@+id/action_coursDetail_to_moduleDetail"
            app:destination="@id/moduleDetailFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
    </fragment>

    <fragment
        android:id="@+id/moduleDetailFragment"
        android:name="com.example.kawi_niveau_mobile_app.ui.cours.ModuleDetailFragment"
        android:label="Détail du Module"
        tools:layout="@layout/fragment_module_detail">
        
        <argument
            android:name="moduleId"
            app:argType="long" />
    </fragment>
</navigation>
